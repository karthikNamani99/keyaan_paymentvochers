<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="#FDFBFB"
    android:orientation="vertical"
    android:tag="cards main container">

    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dimen_5"
        android:elevation="@dimen/dimen_5"
        card_view:cardBackgroundColor="@color/color_white"
        card_view:cardCornerRadius="@dimen/dimen_5"
        card_view:cardUseCompatPadding="true">


        <LinearLayout
            android:id="@+id/layout_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dimen_15"
            android:background="#ffffff"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_15"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_15"
                        android:layout_weight="1"
                        android:drawableRight="@drawable/twodots"
                        android:text="Vocher Number"
                        android:textColor="#000000"
                        android:textSize="@dimen/dimen_14"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView_vocher"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_5"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="001"
                        android:textColor="#80000000"
                        android:textSize="@dimen/dimen_14"
                        android:textStyle="bold" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|start"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_15"
                        android:layout_weight="1"
                        android:drawableRight="@drawable/twodots"
                        android:text="Upload by"
                        android:textColor="#000000"
                        android:textSize="@dimen/dimen_14"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView_upload_person"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_5"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="Devansh"
                        android:textColor="#80000000"
                        android:textSize="@dimen/dimen_14"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|start"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_15"
                        android:layout_weight="1"
                        android:drawableRight="@drawable/twodots"
                        android:text="Recieved by"
                        android:textColor="#000000"
                        android:textSize="@dimen/dimen_14"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView_recieved_person"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_5"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="Devansh"
                        android:textColor="#80000000"
                        android:textSize="@dimen/dimen_14"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|start"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_15"
                        android:layout_weight="1"
                        android:drawableRight="@drawable/twodots"
                        android:text="Paid To"
                        android:textColor="#000000"
                        android:textSize="@dimen/dimen_14"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView_paid_person"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_5"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="Devansh"
                        android:textColor="#80000000"
                        android:textSize="@dimen/dimen_14"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_15"
                        android:layout_weight="1"
                        android:drawableRight="@drawable/twodots"
                        android:text="Amount"
                        android:textColor="#000000"
                        android:textSize="@dimen/dimen_14"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_5"
                        android:layout_weight="1"
                        android:gravity="center|start"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:text="1000000"
                            android:textColor="#80000000"
                            android:textSize="@dimen/dimen_14"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView_amount1"
                            android:layout_width="@dimen/dimen_12"
                            android:layout_height="@dimen/dimen_12"
                            android:background="@drawable/rupee2"
                            android:backgroundTint="#80000000"
                            android:gravity="start"
                            android:textColor="#80000000"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|start"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_15"
                        android:layout_weight="1"
                        android:drawableRight="@drawable/twodots"
                        android:text="InWords"
                        android:textColor="#000000"
                        android:textSize="@dimen/dimen_14"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/amount_inwords"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_5"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="Thousand Rupees"

                        android:textColor="#80000000"
                        android:textSize="@dimen/dimen_14"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_15"
                        android:layout_weight="1"

                        android:drawableRight="@drawable/twodots"
                        android:text="Date"
                        android:textColor="#000000"
                        android:textSize="@dimen/dimen_14"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_5"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="14/08/2019"
                        android:textColor="#80000000"
                        android:textSize="@dimen/dimen_14"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_15"
                        android:layout_weight="1"
                        android:drawableRight="@drawable/twodots"
                        android:text="Time"
                        android:textColor="#000000"
                        android:textSize="@dimen/dimen_14"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_5"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:text="20:18"
                        android:textColor="#80000000"
                        android:textSize="@dimen/dimen_14"
                        android:textStyle="bold" />
                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_34"
                android:layout_marginTop="@dimen/dimen_24"
                android:gravity="center">


                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/recieved_person_image"
                    android:layout_width="@dimen/dimen_150"
                    android:layout_height="@dimen/dimen_150"
                    android:src="@drawable/vicher1"
                    card_view:civ_border_color="#80D5C5C5"
                    card_view:civ_shadow_color="@color/color_white"
                    card_view:civ_shadow_radius="10" />
            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>