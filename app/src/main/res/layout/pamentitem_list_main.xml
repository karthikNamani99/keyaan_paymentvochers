<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:background="#FDFBFB"
    android:orientation="vertical"
    android:tag="cards main container">

    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_5"
        android:elevation="@dimen/dimen_5"
        card_view:cardBackgroundColor="@color/color_white"
        card_view:cardCornerRadius="@dimen/dimen_5"
        card_view:cardUseCompatPadding="true">


        <LinearLayout
            android:id="@+id/layout_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimen_15"
            android:background="#ffffff"
            android:gravity="center"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_15"
                        android:layout_weight="1"
                        android:drawableRight="@drawable/twodots1"
                        android:text="Vocher No"
                        android:textColor="#000000"
                        android:textSize="@dimen/dimen_14"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/vocher_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_15"
                        android:text="001"
                        android:layout_weight="1"
                        android:textColor="#80000000"
                        android:textSize="@dimen/dimen_14"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_15"
                        android:drawableRight="@drawable/twodots1"
                        android:text="Date"
                        android:layout_weight="1"
                        android:textColor="#000000"
                        android:textSize="@dimen/dimen_14"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_15"
                        android:text="14/08/2019"
                        android:layout_weight="1"
                        android:textColor="#80000000"
                        android:textSize="@dimen/dimen_14"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_15"
                        android:layout_weight="1"
                        android:drawableRight="@drawable/twodots1"
                        android:text="Time"
                        android:textColor="#000000"
                        android:textSize="@dimen/dimen_14"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_15"
                        android:text="20:18"
                        android:layout_weight="1"
                        android:textColor="#80000000"
                        android:textSize="@dimen/dimen_14"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|start"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_15"
                        android:drawableRight="@drawable/twodots1"
                        android:text="Amount"
                        android:layout_weight="1"
                        android:textColor="#000000"
                        android:textSize="@dimen/dimen_14"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center|start"
                        android:layout_marginLeft="@dimen/dimen_15"
                        android:layout_weight="1">
                    <TextView
                        android:id="@+id/textView_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1000"
                        android:textColor="#80000000"
                        android:textSize="@dimen/dimen_14"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="@dimen/dimen_10"
                        android:layout_height="@dimen/dimen_10"
                        android:layout_marginLeft="@dimen/dimen_3"
                        android:background="@drawable/rupee2"
                        android:backgroundTint="#80000000"
                        android:textColor="#80000000"
                        android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|start"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_15"
                        android:drawableRight="@drawable/twodots1"
                        android:text="Recieved by"
                        android:textColor="#000000"
                        android:layout_weight="1"
                        android:textSize="@dimen/dimen_14"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView_recieved_person"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimen_15"
                        android:text="Devansh"
                        android:textColor="#80000000"
                        android:textSize="@dimen/dimen_14"
                        android:layout_weight="1"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center">


                <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/recieved_person_image"
                    android:layout_width="@dimen/dimen_95"
                    android:layout_height="@dimen/dimen_95"
                    android:src="@drawable/profile1"
                    card_view:civ_border_color="#80D5C5C5"
                    card_view:civ_shadow_color="@color/color_white"
                    card_view:civ_shadow_radius="10" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>